{% if paginator.nbPages != 0 %}
    <div class="ui centered grid">
        <div class="center aligned column">
            <div class="ui pagination menu">
                {% for i in paginator.pages %}
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'page': i}))  }}" class="{% if i == paginator.currentPage %}active {% endif %} item">
                        {{ i }}
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
