{% extends 'base.html.twig' %}
{% block body %}
    {{ breadcrumb({'home': 'home',  'admin_index': 'admin', 'admin_dish_index': 'dishes'}) }}
    <h1 class="ui horizontal header divider">Dishes</h1>
    <table class="ui table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
            <th>Price</th>
            <th>Status</th>
            <th>Category</th>
            <th>Homemade</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td><a href="{{ path('admin_dish_show', { 'id': dish.id }) }}">{{ dish.id }}</a></td>
                <td><img class="ui image small" src="{{ asset('img/uploads/' ~ dish.image) }}" /></td>
                <td>{{ dish.title }}</td>
                <td>{{ dish.description }}</td>
                <td>{{ dish.author }}</td>
                <td>{{ dish.price }}</td>
                <td>{{ dish.statusName }}</td>
                <td>{{ dish.categoryName }}</td>
                <td>{% if dish.homeMade %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a class="ui inverted button small blue" href="{{ path('admin_dish_show', { 'id': dish.id }) }}">show</a>
                    {% if is_granted('ROLE_EDITOR') %}
                    <a class="ui inverted button small orange"
                       href="{{ path('admin_dish_edit', { 'id': dish.id }) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include 'DamDanAdminBundle:pagination:pagination.html.twig' with {'paginator': dishes} %}
    {% if is_granted('ROLE_EDITOR') %}
        <a class="ui inverted button green" href="{{ path('admin_dish_new') }}"><i class="ui icon plus" ></i>Create a new dish</a>
        <a class="ui inverted button blue" href="{{ path('admin_allergen_index') }}">View allergens</a>
    {% endif %}

{% endblock %}
